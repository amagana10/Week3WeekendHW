<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvRvName"
        android:layout_width="287dp"
        android:layout_height="47dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvRvBday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivEmployeePic" />

    <TextView
        android:id="@+id/tvRvBday"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginEnd="4dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvRvWage"
        app:layout_constraintEnd_toEndOf="@+id/tvRvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRvName" />

    <TextView
        android:id="@+id/tvRvWage"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginEnd="4dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvRvHireDate"
        app:layout_constraintEnd_toEndOf="@+id/tvImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRvBday" />

    <TextView
        android:id="@+id/tvRvHireDate"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginEnd="7dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvImage"
        app:layout_constraintEnd_toEndOf="@+id/tvRvWage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRvWage" />

    <TextView
        android:id="@+id/tvImage"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRvHireDate" />

    <TextView
        android:id="@+id/tvID"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="2dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ivEmployeePic"
        app:layout_constraintEnd_toEndOf="@+id/tvRvName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <ImageView
        android:id="@+id/ivEmployeePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/tvRvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvID" />


</android.support.constraint.ConstraintLayout>